<UserControl x:Class="Avocado.View.SimpleMessageUserControl"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:local="clr-namespace:Avocado"
			 mc:Ignorable="d">
	<DockPanel Margin="0">
		<TextBlock x:Name="Timestamp" TextWrapping="Wrap" Text="{Binding Timestamp, FallbackValue=Timestamp}"
				   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4,0,6,0" Foreground="{StaticResource GrayBrush3}" />
		<TextBlock x:Name="Nickname" TextWrapping="Wrap" Text="{Binding Nickname, FallbackValue=Nickname}"
				   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,3,0"
				   Foreground="{StaticResource AccentColorBrush}" />
		<TextBlock x:Name="Args" Margin="0,0,0,0" TextWrapping="Wrap"
				   Text="{Binding Args, FallbackValue=Message, Mode=OneWay}" HorizontalAlignment="Left" VerticalAlignment="Top"
				   Foreground="{StaticResource GrayBrush4}" />
	</DockPanel>
</UserControl>