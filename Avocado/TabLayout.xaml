<UserControl x:Class="Avocado.TabLayout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Avocado"
             mc:Ignorable="d">
	<Grid Margin="0,0,0.333,0.667">
		<Grid.RowDefinitions>
			<RowDefinition Height="51*"/>
			<RowDefinition Height="47*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="229*"/>
			<ColumnDefinition Width="234*"/>
		</Grid.ColumnDefinitions>
		<ListView x:Name="UsersListView" Grid.RowSpan="2" Margin="0,0,0,26.333" HorizontalAlignment="Left" Width="140">
			<ListView.View>
				<GridView>
					<GridViewColumn Header="Name" DisplayMemberBinding="{Binding Path=Name}"/>
				</GridView>
			</ListView.View>
		</ListView>
		<RichTextBox x:Name="RichTextBoxPrimary" Grid.ColumnSpan="2" Grid.Column="0" Margin="145,0,0.333,26.333" Grid.Row="0" Grid.RowSpan="2">
			<RichTextBox.Resources>
				<Style TargetType="{x:Type Paragraph}">
					<Setter Property="Margin" Value="0"/>
				</Style>
			</RichTextBox.Resources>
		</RichTextBox>
		<TextBox x:Name="TextBoxSend" Grid.ColumnSpan="2" Margin="0,0,0.333,0.333" Grid.Row="1" TextWrapping="Wrap" Height="21" VerticalAlignment="Bottom" KeyUp="TextBoxSend_KeyUp"/>
	</Grid>
</UserControl>
