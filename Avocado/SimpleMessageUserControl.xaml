<UserControl x:Class="Avocado.SimpleMessageUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Avocado"
             mc:Ignorable="d">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition Width="0*"/>
		</Grid.ColumnDefinitions>
		<DockPanel LastChildFill="False" Margin="0,0,0.333,0">
			<TextBlock x:Name="TextBlockTimestamp" TextWrapping="Wrap" Text="{Binding Timestamp, FallbackValue=Timestamp}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,6,0"/>
			<TextBlock x:Name="TextBlockNickname" TextWrapping="Wrap" Text="{Binding Nickname, FallbackValue=Nickname}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,3,0"/>
			<StackPanel Orientation="Horizontal">
				<Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Width="2" />
			</StackPanel>
			<TextBlock x:Name="TextBlockArgs" Margin="3,0,0,0" TextWrapping="Wrap" Text="{Binding Args, FallbackValue=Message}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
		</DockPanel>

	</Grid>
</UserControl>
