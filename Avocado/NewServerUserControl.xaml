<UserControl x:Class="Avocado.NewServerUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Avocado"
			 xmlns:metro="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
	<DockPanel LastChildFill="True" VerticalAlignment="Center">
		<Border Name="B" />
		<TextBox x:Name="TextBoxAddress" Margin="10,10,10,0" MaxLength="25" Text="{Binding ServerAddress, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" metro:TextBoxHelper.Watermark="Server address" DockPanel.Dock="Top"/>
		<TextBox x:Name="TextBoxPort" Margin="10,5,10,10" Text="{Binding ServerPort, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" metro:TextBoxHelper.Watermark="Port" MaxLength="4" DockPanel.Dock="Top" />
	</DockPanel>

	<UserControl.Resources>
		<Style TargetType="{x:Type TextBox}">
			<Setter Property="TextAlignment" Value="Center" />
			<Setter Property="TextWrapping" Value="NoWrap" />
			<Setter Property="VerticalAlignment" Value="Center" />
			<Setter Property="FontSize" Value="10" />
		</Style>
	</UserControl.Resources>
</UserControl>
