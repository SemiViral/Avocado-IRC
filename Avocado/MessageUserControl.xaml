<UserControl x:Class="Avocado.MessageUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:m="clr-namespace:Avocado.Model"
			 xmlns:local="clr-namespace:Avocado"
             mc:Ignorable="d" d:DesignWidth="300" VerticalAlignment="Bottom">
	<Grid>
		<Label x:Name="Nickname" Content="Nickname&#xD;&#xA;" HorizontalAlignment="Left" VerticalAlignment="Top" Height="26" Foreground="#FF5AFF1C"/>
		<Label x:Name="Timestamp" Content="Timestamp" HorizontalAlignment="Left" Margin="68,0,0,0" VerticalAlignment="Top" Foreground="#FF00B4E4"/>
		<TextBox x:Name="MessageDisplay" Text="{Binding Args}" Height="23" Margin="0,26,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
	</Grid>

	<UserControl.Resources>
		<!--<DataTemplate x:Key="MessageTemplate" DataType="{x:Type m:Message}">
			<local:M/>
		</DataTemplate>-->
	</UserControl.Resources>
</UserControl>