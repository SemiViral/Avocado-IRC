<UserControl x:Class="Avocado.ChannelUserControl"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:root="clr-namespace:Avocado"
			 xmlns:local="clr-namespace:Avocado.ViewModel"
			 xmlns:m="clr-namespace:Avocado.Model"
			 mc:Ignorable="d">
	<DockPanel>
		<TextBox x:Name="TextBoxSend" Text="{Binding SendText, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0.333,1"
				 TextWrapping="Wrap" Height="21"
				 VerticalAlignment="Bottom" DockPanel.Dock="Bottom">
			<TextBox.InputBindings>
				<KeyBinding Key="Enter" Command="{Binding TextBoxSend_KeyUp}"/>
			</TextBox.InputBindings>
		</TextBox>
		<ListBox x:Name="ListBoxUsers" ItemsSource="{Binding Users}" HorizontalAlignment="Left" Width="200" Margin="0,0,5,5"
				 BorderBrush="{x:Null}"
				 Visibility="{Binding HasItems, RelativeSource={RelativeSource Self}, Converter={StaticResource BooleanToVisiblity}}" />
		<ListBox x:Name="ListBoxMessages" ItemsSource="{Binding Messages}" ItemTemplate="{DynamicResource MessagesTemplate}"
				 Margin="0,0,0,5" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="{x:Null}" VerticalAlignment="Top"
				 HorizontalAlignment="Stretch" ScrollViewer.HorizontalScrollBarVisibility="Disabled" />
	</DockPanel>

	<UserControl.Resources>
		<DataTemplate x:Key="MessagesTemplate" DataType="{x:Type root:MessageUserControl}">
			<root:MessageUserControl />
		</DataTemplate>
	</UserControl.Resources>
</UserControl>