<UserControl x:Class="Avocado.ChannelUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Avocado.ViewModel"
             mc:Ignorable="d" Height="88.579" Width="325">
	<Grid DataContext="{Binding ChannelViewModel}" Margin="0,0,0.333,0.667">
		<Grid.RowDefinitions>
			<RowDefinition Height="51*"/>
			<RowDefinition Height="47*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="229*"/>
			<ColumnDefinition Width="234*"/>
		</Grid.ColumnDefinitions>
		<TextBox x:Name="TextBoxSend" Text="{Binding SendText}" Grid.ColumnSpan="2" Grid.Column="0" Margin="0,0,0.333,0.333" Grid.Row="1" TextWrapping="Wrap" Height="21" VerticalAlignment="Bottom">
			<TextBox.InputBindings>
				<KeyBinding Command="{Binding Path=TextBoxSend_KeyUp, UpdateSourceTrigger=PropertyChanged}" Key="Enter"/>
			</TextBox.InputBindings>
		</TextBox>
		<ListBox x:Name="ListBoxMessages" Grid.ColumnSpan="2" Grid.Column="0" Margin="145,0,0.333,26.333" Grid.Row="0" Grid.RowSpan="2"/>
		<ListBox x:Name="ListBoxUsers" ItemsSource="{Binding Users}" HorizontalAlignment="Left" Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Width="140" Margin="0,0,0,26"/>
	</Grid>
</UserControl>
