<UserControl x:Class="Avocado.SelectionListUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Avocado.ViewModel"
             xmlns:avocado="clr-namespace:Avocado"
             mc:Ignorable="d" d:DesignWidth="300" Width="Auto">
	<Grid Background="#FF3E3E3E">
		<TextBox x:Name="Hostname" Text="{Binding Hostname}" TextWrapping="Wrap" Height="35" VerticalAlignment="Top" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" BorderBrush="{x:Null}" SelectionBrush="{x:Null}" FontSize="25.333"/>
		<ListBox x:Name="Channels" ItemsSource="{Binding Users}" HorizontalAlignment="Left" Margin="0,38,0,0" BorderBrush="{x:Null}" Foreground="Black">
			<ListBox.Background>
				<ImageBrush TileMode="Tile" ViewportUnits="Absolute" Viewport="0, 0, 150, 150" ImageSource="pack://siteoforigin:,,,/Resources/noise.png"/>
			</ListBox.Background>
		</ListBox>
	</Grid>

	<UserControl.DataContext>
		<local:MainViewModel/>
	</UserControl.DataContext>

</UserControl>
